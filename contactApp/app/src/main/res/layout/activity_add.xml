<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1B36C8">

        <TextView
            android:id="@+id/del"
            style="bold"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="X"
            android:textColor="@color/white"></TextView>

        <TextView
            android:layout_width="302dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Create new contact"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/save_text"
            style="bold"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="SAVE"
            android:textColor="@color/white"></TextView>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="#7B8CED"
        android:src="@drawable/ic_baseline_person_24"></ImageView>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_phone_android_24"></ImageView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save to device"
    android:layout_gravity="center_vertical"></TextView>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_person_24"></ImageView>

        <EditText
            android:id="@+id/fisrt_name"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="First name"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            ></ImageView>

        <EditText
            android:id="@+id/last_name"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Last name"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_local_phone_24"
            ></ImageView>

        <EditText
            android:id="@+id/phone"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Phone"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_email_24"
            ></ImageView>

        <EditText
            android:id="@+id/email"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Email"></EditText>

    </LinearLayout>


</LinearLayout>